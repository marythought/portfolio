<li id='<%= dom_id project %>'>
  <div class='container'>
    <a href='<%= project.url %>'>
    <% if project.image.attached? %>
      <%= image_tag project.image, height: '50', alt: 'project image' %>
    <% elsif project.image_url.present? %>
      <img src='<%= project.image_url %>' height='50'></a>
    <% end %>
  </div>
  <h3><%= project.name %></h3>
  <p><%= link_to t('show'), project, remote: true %></p>
  <p> <%= project.description %></p>
  <% if current_user && current_user.admin? %>
    <p> <%= link_to t('edit'), edit_project_path(project), id: 'project_edit_id', remote: true %>
    <p> <%= link_to t('destroy'), project, method: :delete, data: { confirm: t('confirm') }, remote: true %>
  <% end %>
</li>
