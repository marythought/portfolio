<div class="row">

  <div class="large-8 columns">

    <p id="title">
      <strong>Title:</strong>
      <%= @article.title %>
    </p>

    <p id="image">
      <img src="<%= @article.image_url %>">
    </p>

    <p id="author">
      <strong>Author:</strong>
      <%= @article.user.name %>
    </p>

    <p id="article_body">
      <strong>Body:</strong>
      <%= @article.body %>
    </p>

    <% if user_signed_in? && policy(@article).update?%>
      <p>
      <%= @article.published? ? "Status: Published" : "Status: Unpublished" %>
      </p>
      <%= link_to 'Edit', edit_article_path(@article) %>
      <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } if policy(@article).destroy? %>
    <% end %>

    <h3>NOW HERE BE COMMENTS</h3>
    <p>#################################</p>

    <% @article.comments.each do |comment| %>
      <% if comment.published %>
        <p>Comment by: <%= comment.user %></p>
        <p>Posted at: <%= comment.created_at %></p>
        <p><%= comment.content %></p>
      <% end %>
    <% end %>

    <% if policy(@article.comments).update? %>
    <%= link_to "Editors, edit or approve comments", article_comments_path(@article) %>
    <% end %>

    <h3>ADD A NEW COMMENT, BUT DON'T BE A JERK</h3>
    <p>#################################</p>
    <%= link_to 'New comment', new_article_comment_path(@article) %>

    <%= link_to 'Back', articles_path %>
  </div>
</div>
