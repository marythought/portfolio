<div class="row">

  <div class="large-8 columns">
    <p id="notice"><%= notice %></p>

    <h2>Articles</h2>

    <% if user_signed_in? %>
      <% if current_user.author? %>
        <%= render 'articles_by_author' %>
      <% elsif current_user.editor? %>
        <%= render 'articles_for_editor' %>
      <% else %>
        <%= render 'articles_public' %>
      <% end %>
    <% else %>
      <%= render 'articles_public' %>
    <% end %>

    <br>
    <% if user_signed_in? %>
      <% if policy(@articles).create? %>
        <%= link_to 'New Article', new_article_path, class: 'button' %>
      <% end %>
    <% end %>
  </div>
</div>
