<table>
<thead>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th>Published?</th>
    <th>Edit</th>
  </tr>
</thead>

<tbody id="blog_listing">
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.created_at.to_date %></td>
      <td><%= link_to article.title, article %></td>
      <td><%= article.body %></td>
      <td><%= article.user.name if article.user.present? %></td>
      <td id="status"><%= article.published? ? "Published" : "Unpublished" %>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</tbody>
</table>
