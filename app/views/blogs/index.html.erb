<div class="row">

  <div class="large-8 columns">
    <p id="notice"><%= notice %></p>

    <h2>Blog Posts</h2>

    <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= link_to blog.created_at.to_date %></td>
          <td><%= link_to blog.title, blog %></td>
          <td><%= blog.body %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    <br>
    <%= link_to 'New Blog Post', new_blog_path, class: 'button' %>
  </div>
</div>
